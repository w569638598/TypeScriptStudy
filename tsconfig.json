{
  "compilerOptions": { //编译选项
      "target": "es2016",       //编译目标代码的js标准
      "module": "commonjs",     //编译目标使用的模块化标准 commonjs  es6
      "lib": ["es2016"],        //ts使用的环境
      "outDir": "./dist",        //输出文件
      "strictNullChecks": true,    //严格的类型检查模式，null和undefined只能赋值给自身，不能赋值给其他类型，比如 let str: string = undefined
      "removeComments": true,        //移除注释
      "noImplicitUseStrict": true,    //编译结果中不包含”use strict“
      "esModuleInterop": true,         //启用es模块儿化交互非es模块儿导出
      "noEmitOnError": true,          //错误时，不生成编译结果
      "moduleResolution": "node",      //模块儿解析策略， classic和node---classic为经典策略
      "strictPropertyInitialization": true   //检查属性是否赋值
    },
    "include": ["./src"],       //对某个文件夹下进行编译
    // "files": ["./src"]       某个文件加下的某个文件
    
}
